{
	"compilerOptions": {
		"outDir": "./dist/",
		"module": "ES2020",
		"target": "es6",
		"jsx": "react",
		"moduleResolution": "node",
		"sourceMap": true,
		"allowJs": true,
		"strict": true,
		"noImplicitReturns": true,
		"allowSyntheticDefaultImports": true,
	},
	"include": [
		"src/**/*",
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
